    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Ionic: Serve (npx)",
            "command": "npx ionic serve --no-open"
        }
    ],
    "compounds": [
        {
            "name": "Ionic: Serve + Chrome",
            "configurations": ["Ionic: Serve (npx)", "Launch Chrome against localhost"]
        }
    ]
}